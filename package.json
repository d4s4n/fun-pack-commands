{
  "name": "fun-pack-commands",
  "version": "1.4.0",
  "description": "Большой набор развлекательных и информационных команд.",
  "main": "index.js",
  "author": "I_Sahorok",
  "botpanel": {
    "categories": [
      "Команды",
      "Утилиты"
    ],
    "icon": "party-popper",
    "settings": {
      "animeInfoMessage": {
        "type": "string",
        "label": "Аниме: Сообщение (Команда anime)",
        "default": "Аниме: {name}{originalNameText} | Тип: {type} | Год: {year} | Рейтинг: {rating} | Эпизоды: {episodes}"
      },
      "animeNotFoundMessage": {
        "type": "string",
        "label": "Аниме: Не найдено (Команда anime)",
        "default": "Не удалось найти аниме по запросу: {query}"
      },
      "coinflipHeads": {
        "type": "string",
        "label": "Монетка: Орел (Команда coinflip)",
        "default": "Выпал орел!"
      },
      "coinflipTails": {
        "type": "string",
        "label": "Монетка: Решка (Команда coinflip)",
        "default": "Выпала решка!"
      },
      "covidSuccess": {
        "type": "string",
        "label": "COVID: Сообщение (Команда covid)",
        "default": "Статистика для {country}: {cases} случаев, {deaths} смертей, {recovered} выздоровело."
      },
      "covidNotFound": {
        "type": "string",
        "label": "COVID: Не найдено (Команда covid)",
        "default": "Страна '{country}' не найдена."
      },
      "cryptoSuccessMessage": {
        "type": "string",
        "label": "Крипто: Сообщение (Команда crypto)",
        "default": "Курс {name} ({symbol}): ${usd} / {rub} ₽"
      },
      "cryptoNotFoundMessage": {
        "type": "string",
        "label": "Крипто: Не найдено (Команда crypto)",
        "default": "Криптовалюта '{query}' не найдена."
      },
      "currencySuccess": {
        "type": "string",
        "label": "Валюта: Сообщение (Команда currency)",
        "default": "{amount} {from} = {result} {to}"
      },
      "currencyInvalid": {
        "type": "string",
        "label": "Валюта: Ошибка ввода (Команда currency)",
        "default": "Неверный формат. Пример: @currency 100 USD EUR"
      },
      "dateWithHoliday": {
        "type": "string",
        "label": "Дата: С праздником (Команда date)",
        "default": "Сегодня {date} Праздник: {holiday}!"
      },
      "dateWithoutHoliday": {
        "type": "string",
        "label": "Дата: Без праздника (Команда date)",
        "default": "Сегодня {date} Сегодня нет особых праздников."
      },
      "factMessage": {
        "type": "string",
        "label": "Факт: Сообщение (Команда fact)",
        "default": "Факт: {fact}"
      },
      "timeFormat": {
        "type": "string",
        "label": "Время: Сообщение (Команда time)",
        "default": "Текущее время ({timezone}): {time}"
      },
      "timeInvalidOffset": {
        "type": "string",
        "label": "Время: Ошибка (Команда time)",
        "default": "Неверный формат. Укажите число от -12 до +12, например: +5 или -3."
      },
      "weatherInfoMessage": {
        "type": "string",
        "label": "Погода: Сообщение (Команда weather)",
        "default": "Погода в городе {city}, Температура: {temp}°C (ощущается как {feelsLike}°C), Погодные условия: {description}, Влажность: {humidity}%, Ветер: {windSpeed} км/ч (порывы до {windGust} км/ч), Давление: {pressure} гПа, UV-индекс: {uv}, Облачность: {cloud}%, Видимость: {visibility} км"
      },
      "weatherNotFoundMessage": {
        "type": "string",
        "label": "Погода: Не найдено (Команда weather)",
        "default": "Не удалось найти такой город. Попробуй указать точное название."
      },
      "apiErrorMessage": {
        "type": "string",
        "label": "Общая ошибка API",
        "default": "Не удалось получить данные от API. Попробуйте позже."
      }
    }
  }
}
