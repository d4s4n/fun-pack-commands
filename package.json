{
  "name": "fun-pack-commands",
  "version": "1.4.0",
  "description": "Большой набор развлекательных и информационных команд.",
  "main": "index.js",
  "author": "I_Sahorok",
  "botpanel": {
    "categories": [
      "Команды",
      "Утилиты"
    ],
    "icon": "party-popper",
    "settings": {
      "enableAnime": {
        "type": "boolean",
        "label": "Включить или выключить команду anime",
        "default": true
      },
      "animeInfoMessage": {
        "type": "string",
        "label": "Аниме: Сообщение",
        "default": "Аниме: {name}{originalNameText} | Тип: {type} | Год: {year} | Рейтинг: {rating} | Эпизоды: {episodes}"
      },
      "animeNotFoundMessage": {
        "type": "string",
        "label": "Аниме: Не найдено",
        "default": "Не удалось найти аниме по запросу: {query}"
      },
      "enableCoinflip": {
        "type": "boolean",
        "label": "Включить или выключить команду coinflip",
        "default": true
      },
      "coinflipHeads": {
        "type": "string",
        "label": "Монетка: Орел",
        "default": "Выпал орел!"
      },
      "coinflipTails": {
        "type": "string",
        "label": "Монетка: Решка",
        "default": "Выпала решка!"
      },
      "enableCovid": {
        "type": "boolean",
        "label": "Включить или выключить команду covid",
        "default": true
      },
      "covidSuccess": {
        "type": "string",
        "label": "COVID: Сообщение",
        "default": "Статистика для {country}: {cases} случаев, {deaths} смертей, {recovered} выздоровело."
      },
      "covidNotFound": {
        "type": "string",
        "label": "COVID: Не найдено",
        "default": "Страна '{country}' не найдена."
      },
      "enableCrypto": {
        "type": "boolean",
        "label": "Включить или выключить команду crypto",
        "default": true
      },
      "cryptoSuccessMessage": {
        "type": "string",
        "label": "Крипто: Сообщение",
        "default": "Курс {name} ({symbol}): ${usd} / {rub} ₽"
      },
      "cryptoNotFoundMessage": {
        "type": "string",
        "label": "Крипто: Не найдено",
        "default": "Криптовалюта '{query}' не найдена."
      },
      "enableCurrency": {
        "type": "boolean",
        "label": "Включить или выключить команду currency",
        "default": true
      },
      "currencySuccess": {
        "type": "string",
        "label": "Валюта: Сообщение",
        "default": "{amount} {from} = {result} {to}"
      },
      "currencyInvalid": {
        "type": "string",
        "label": "Валюта: Ошибка ввода",
        "default": "Неверный формат. Пример: @currency 100 USD EUR"
      },
	  "enableDate": {
        "type": "boolean",
        "label": "Включить или выключить команду date",
        "default": true
      },
	  "dateWithHoliday": {
        "type": "string",
        "label": "Дата: С праздником",
        "default": "Сегодня {date} Праздник: {holiday}!"
      },
      "dateWithoutHoliday": {
        "type": "string",
        "label": "Дата: Без праздника",
        "default": "Сегодня {date} Сегодня нет особых праздников."
      },
      "enableFact": {
        "type": "boolean",
        "label": "Включить или выключить команду fact",
        "default": true
      },
      "factMessage": {
        "type": "string",
        "label": "Факт: Сообщение",
        "default": "Факт: {fact}"
      },
      "enableTime": {
        "type": "boolean",
        "label": "Включить или выключить команду time",
        "default": true
      },
      "timeFormat": {
        "type": "string",
        "label": "Время: Сообщение",
        "default": "Текущее время ({timezone}): {time}"
      },
      "timeInvalidOffset": {
        "type": "string",
        "label": "Время: Ошибка",
        "default": "Неверный формат. Укажите число от -12 до +12, например: +5 или -3."
      },
      "enableWeather": {
        "type": "boolean",
        "label": "Включить или выключить команду weather",
        "default": true
      },
      "weatherInfoMessage": {
        "type": "string",
        "label": "Погода: Сообщение",
        "default": "Погода в городе {city}, Температура: {temp}°C (ощущается как {feelsLike}°C), Погодные условия: {description}, Влажность: {humidity}%, Ветер: {windSpeed} км/ч (порывы до {windGust} км/ч), Давление: {pressure} гПа, UV-индекс: {uv}, Облачность: {cloud}%, Видимость: {visibility} км"
      },
      "weatherNotFoundMessage": {
        "type": "string",
        "label": "Погода: Не найдено",
        "default": "Не удалось найти такой город. Попробуй указать точное название."
      },
      "apiErrorMessage": {
        "type": "string",
        "label": "Общая ошибка API",
        "default": "Не удалось получить данные от API. Попробуйте позже."
      }
    }
  }
}